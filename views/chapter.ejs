<%- include('./partials/header') %>

<div class="container">
  <div class="row">
    <div class="card-panel center blue-grey darken-3 white-text" style="padding: 5px 10px 15px 10px; margin: 0;">
      <h4><strong><%= chapter.title %></strong></h4>
    </div>
  </div>

  <div class="row">
    <a href="/author/<%= author_id %>/story/<%= story_id %>" class="btn waves-effect waves-light amber darken-2">Back
      <i class="material-icons right">arrow_back</i>
    </a>

    <a href="/author/<%= author_id %>" class="btn waves-effect waves-light amber darken-2">Author
      <i class="material-icons right">person</i>
    </a>

    <% if(currentUser && currentUser.author.id.equals(author_id)){ %>
    <button class="btn waves-effect waves-light modal-trigger amber darken-2 right" data-target="chapter-edit">
      Edit<i class="material-icons right">edit</i>
    </button>

    <div id="chapter-edit" class="modal">
      <div class="modal-content">
        <h4 class="center">EDIT CHAPTER</h4><br>
        <form action="/author/<%= author_id %>/story/<%= story_id %>/chapter/<%= chapter._id %>?_method=PUT" method="POST">
          <div class="input-field">
            <input id="chapter-title" name="title" type="text" value="<%= chapter.title %>" required></input>
            <label class="active" for="chapter-title">Title</label>
          </div>
          <div class="input-field">
            <textarea id="chapter-text" name="text" class="materialize-textarea" required><%= chapter.text %></textarea>
            <label class="active" for="chapter-text">Text</label>
          </div>
          <button type="submit" class="btn waves-effect waves-light amber darken-2">Save</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
  
  <div class="row">
    <div class="card-panel blue-grey-text text-darken-3">
      <span class="flow-text">
        <%= chapter.text %>
      </span>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>